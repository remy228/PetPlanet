<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.remya.petplanet.MainActivity"
    tools:showIn="@layout/activity_main"
    android:weightSum="1">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:src="@drawable/main_page" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Everything you need under one Woof!"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/textView10"
        android:typeface="serif"
        android:textColor="@android:color/holo_green_dark" />

    <GridLayout
        android:layout_width="407dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/frameLayout"
        android:layout_gravity="bottom">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/get_a_pet"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_alignBottom="@+id/imageButton2"
            android:layout_toStartOf="@+id/imageButton3"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="getPet"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/post_a_pet"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_row="0"
            android:layout_column="4"
            android:onClick="postPet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Get a Pet!"
            android:layout_marginBottom="10dp"
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Post a Pet!"
            android:layout_marginBottom="10dp"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="4" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:src="@drawable/walk_a_pet"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageButton2"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="walkPet"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_marginRight="100dp"
            android:src="@drawable/contacts_pets"
            android:onClick="petContacts"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Walk a Pet!"
            android:id="@+id/textView3"
            android:layout_row="3"
            android:layout_column="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pet Contacts!"
            android:id="@+id/textView4"
            android:layout_row="3"
            android:layout_column="4" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="248dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnSpan="2" />


    </GridLayout>

</LinearLayout>
