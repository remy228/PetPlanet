<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.remya.petplanet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GetPet"
            android:label="@string/title_activity_get_pet"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.remya.petplanet.MainActivity" />
        </activity>
        <activity
            android:name=".PostPet"
            android:label="@string/title_activity_post_pet"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.remya.petplanet.MainActivity" />
        </activity>
        <activity
            android:name=".WalkPet"
            android:label="@string/title_activity_walk_pet"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PetContacts"
            android:label="@string/title_activity_pet_contacts"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.remya.petplanet.MainActivity" />
        </activity>
        <activity
            android:name=".Walking_Activity"
            android:label="@string/title_activity_walking_"
            android:parentActivityName=".WalkPet"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.remya.petplanet.WalkPet" />
        </activity>
    </application>

</manifest>